{
  "manifest_version": 3,
  "name": "AI Research Platform Highlights",
  "version": "1.0.0",
  "description": "Save text highlights from any webpage to your AI Research Platform project",
  "permissions": [
    "storage",
    "activeTab",
    "alarms"
  ],
  "host_permissions": [
    "http://localhost:5001/*",
    "http://127.0.0.1:5001/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Research Highlights"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}

