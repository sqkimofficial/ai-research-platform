{
  "manifest_version": 3,
  "name": "AI Research Platform Highlights",
  "version": "1.0.1",
  "description": "Save text highlights from any webpage to your AI Research Platform project",
  "permissions": [
    "storage",
    "activeTab",
    "alarms",
    "identity",
    "identity.email"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:5001/*",
    "http://127.0.0.1:5001/*",
    "https://dev-e0a45vyrmttly5df.us.auth0.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Research Highlights"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}

